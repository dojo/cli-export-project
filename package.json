{
  "name": "@dojo/cli-export-project",
  "version": "3.0.0-pre",
  "description": "Emit a project bundle of a Dojo 2 Application",
  "private": true,
  "homepage": "http://dojotoolkit.org",
  "bugs": {
    "url": "https://github.com/dojo/cli-export-project/issues"
  },
  "license": "BSD-3-Clause",
  "main": "main.js",
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/cli-export-project.git"
  },
  "scripts": {
    "build:cjs": "tsc",
    "build": "npm-run-all build:cjs -s package",
    "clean": "rimraf dist coverage",
    "intern": "intern",
    "lint:tslint": "tslint -p .",
    "lint:prettier": "prettier -l \"{src,tests}/**/*.{ts,tsx}\"",
    "lint": "run-p lint:*",
    "package": "dojo-package",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx}\"",
    "test": "run-s lint build intern",
    "uploadCoverage": "codecov --file=coverage/coverage.json",
    "watch:ts": "dojo-tsc-watcher -p tsconfig.json -- dojo-package",
    "watch": "dojo-tsc-watcher -p tsconfig.json -- dojo-package"
  },
  "devDependencies": {
    "@dojo/cli": "^3.0.0-alpha.1",
    "@dojo/loader": "^2.0.0",
    "@dojo/scripts": "^3.0.0-alpha.6",
    "@types/glob": "^5.0.30",
    "@types/mockery": "^1.4.29",
    "@types/node": "~9.6.5",
    "@types/sinon": "~4.3.3",
    "@types/yargs": "^10.0.0",
    "codecov": "~3.0.4",
    "cpx": "~1.5.0",
    "husky": "^0.14.3",
    "lint-staged": "6.0.0",
    "mockery": "^1.7.0",
    "monaco-editor": "^0.8.3",
    "npm-run-all": "~4.1.3",
    "sinon": "~4.5.0",
    "yargs": "^10.0.3"
  },
  "dependencies": {
    "chalk": "~2.4.0",
    "glob": "^7.1.1",
    "pkg-dir": "^1.0.0",
    "resolve-cwd": "^1.0.0",
    "tslib": "~1.8.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
